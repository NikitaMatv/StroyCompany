<Window x:Class="StroyCompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StroyCompany"
        mc:Ignorable="d"
         Icon="Resource/LOGO.png" 
        Title="StroyCompany - STROIM" Height="600" Width="900"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"  Background="LightGray">

            <Image Source="Resource/LOGO.png" Width="100" HorizontalAlignment="Left" Margin="20 10 0 0"></Image>
            <TextBlock Margin="35 0 0 0" FontSize="20">STROIM</TextBlock>
        </StackPanel>
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        <StackPanel Grid.Row="2" Background="LightGray"></StackPanel>
    </Grid>
</Window>
