<Page x:Class="StroyCompany.Pages.Balace"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StroyCompany.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Balace">

    <Grid>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Margin="110 -90 0 0">Пополнение</TextBlock>
        <Border CornerRadius="50" Margin="100 5 0 0" Background="LightGray" Width="450" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
          
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock Margin="5" FontSize="15">Сумма пополнения</TextBlock>
                <TextBox x:Name="TbBalance"  PreviewTextInput="TbBalance_PreviewTextInput"  Margin="5"  FontSize="15" MaxLength="7" TextAlignment="Center"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button Margin="5" x:Name="BtPopoln" Click="BtPopoln_Click">Пополнить</Button>
                <Button Margin="5" x:Name="BtOtm" Click="BtOtm_Click">Отмена</Button>
            </StackPanel>
            
        </StackPanel>
        </Border>
    </Grid>
</Page>
