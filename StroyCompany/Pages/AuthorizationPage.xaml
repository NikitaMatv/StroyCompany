<Page x:Class="StroyCompany.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StroyCompany.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Margin="-90">Авторизация</TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="TbLogin" Width="150"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="TbPassword" Width="150"></PasswordBox>
            <CheckBox x:Name="SaveCb" IsChecked="True" Margin="7">Запомнить меня</CheckBox>
            <Button x:Name="AutorBt" Click="AutorBt_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
